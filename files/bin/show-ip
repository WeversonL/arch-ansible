#!/usr/bin/env bash

AMARELO="\e[33m"
VERDE="\e[32m"

IP_LOCAL="${VERDE}$(ip -br a | awk '{print $3}' | tail -n 1 | cut -d '/' -f 1)"
PUBLIC_IP="${VERDE}$(curl -s ifconfig.me)" 

LABEL_LOCAL="${AMARELO}Local"
LABEL_PUBLIC="${AMARELO}Public"

echo -e "$LABEL_LOCAL: $IP_LOCAL"
echo -e "$LABEL_PUBLIC: $PUBLIC_IP"
