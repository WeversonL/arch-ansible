alias l="exa $BASIC_LS_OPTS"
alias la="exa -la $BASIC_LS_OPTS"
alias ll="exa -l $BASIC_LS_OPTS --time-style long-iso"
alias lt="exa -aT --color=always"
alias cat="bat"
alias grep="rg"
alias find="fd"
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"
alias detail="exa $BASIC_LS_OPTS --icons"
