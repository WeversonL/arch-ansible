{
  // EDITOR CONFIG
  "editor.fontFamily": "Cascadia Mono",
  "editor.fontSize": 22,
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.bracketPairColorization.enabled": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  // TERMINAL CONFIG
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeight": "800",
  "security.workspace.trust.untrustedFiles": "open",
  // LANGUAGE CONFIG
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/home/verso/.vscode-oss/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
  // WORKSPACE CONFIG
  "workbench.colorTheme": "Dracula",
  "workbench.iconTheme": "material-icon-theme",
  // PRETIFFY CONFIG | FORMAT DOCUMENT
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // FILES CONFIGj
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "files.associations": {
    "*.java": "java"
  },
  // OTHERS CONFIG
  "explorer.confirmDelete": false,
  "redhat.telemetry.enabled": false,
  // MACROS
  "commands.commands": {},
  "editor.unicodeHighlight.allowedCharacters": {
    "Â ": true
  },
  "workbench.editor.untitled.hint": "hidden"
}